<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.evanfuhr.pokemondatabase.fragments.PokemonMovesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/level_up_moves_card"
            app:cardBackgroundColor="?attr/colorButtonNormal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/level_up_moves_layout"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/levelUpMoves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/levelUpMoves"
                    android:textSize="24sp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/tm_moves_card"
            app:cardBackgroundColor="?attr/colorButtonNormal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tm_moves_layout"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tmMoves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tmMoves"
                    android:textSize="24sp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/egg_moves_card"
            app:cardBackgroundColor="?attr/colorButtonNormal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/egg_moves_layout"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/eggMoves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eggMoves"
                    android:textSize="24sp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/tutor_moves_card"
            app:cardBackgroundColor="?attr/colorButtonNormal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tutor_moves_layout"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/tutorpMoves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tutorMoves"
                    android:textSize="24sp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>
