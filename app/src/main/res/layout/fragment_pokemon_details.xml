<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evanfuhr.pokemondatabase.PokemonDetailsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nationalDexNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nationalDexNumber"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/pokemonSprite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sprite001"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/nationalDexNumber"
                android:contentDescription="@string/spritedescription" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
