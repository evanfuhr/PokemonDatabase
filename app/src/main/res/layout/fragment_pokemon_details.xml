<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evanfuhr.pokemondatabase.fragments.PokemonDetailsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:cardBackgroundColor="?attr/colorButtonNormal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/nationalDexNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nationalDexNumber"
                    android:textSize="24sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <com.evanfuhr.pokemondatabase.views.GifImageView
                    android:id="@+id/gifImageViewPokemonSprite"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/spritedescription"
                    app:srcCompat="@drawable/sprite001" />

            </RelativeLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/pokemonSprite"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/pokemonHeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:ems="10"
                        android:gravity="start"
                        android:inputType="none"
                        android:text="@string/pokemonHeight" />

                    <TextView
                        android:id="@+id/pokemonHeightValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:ems="10"
                        android:gravity="end"
                        android:inputType="none"
                        android:paddingRight="@dimen/activity_vertical_margin"
                        android:text="@string/pokemonHeightValue" />

                    <TextView
                        android:id="@+id/pokemonWeight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:ems="10"
                        android:gravity="start"
                        android:inputType="none"
                        android:text="@string/pokemonWeight" />

                    <TextView
                        android:id="@+id/pokemonWeightValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:ems="10"
                        android:gravity="end"
                        android:inputType="none"
                        android:paddingRight="@dimen/activity_vertical_margin"
                        android:text="@string/pokemonWeightValue" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/pokemonAbilities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:ems="10"
                        android:gravity="start"
                        android:inputType="none"
                        android:text="@string/pokemonAbilities" />

                    <LinearLayout
                        android:id="@+id/pokemonAbilitiesList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:orientation="vertical">
                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:ems="10"
                        android:gravity="start"
                        android:inputType="none"
                        android:text="@string/pokemonEggsGroups" />

                    <LinearLayout
                        android:id="@+id/pokemonEggGroupsList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        android:orientation="vertical">
                    </LinearLayout>
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
