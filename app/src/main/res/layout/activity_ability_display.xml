<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evanfuhr.pokemondatabase.activities.AbilityDisplayActivity"
    android:id="@+id/ability_display_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ability_details_scroll_view"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:longClickable="false">

            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@color/colorPrimary"-->
                <!--android:id="@+id/details_card"-->
                <!--app:cardBackgroundColor="?attr/colorButtonNormal"-->
                <!--android:layout_marginBottom="@dimen/activity_vertical_margin"-->
                <!--android:layout_margin="@dimen/activity_horizontal_margin">-->

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.evanfuhr.pokemondatabase.fragments.AbilityDetailsFragment"
                    android:id="@+id/abilityDetailsFragment"
                    android:layout_margin="@dimen/activity_horizontal_margin"/>

            <!--</android.support.v7.widget.CardView>-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:id="@+id/pokemon_list_card"
                app:cardBackgroundColor="?attr/colorButtonNormal"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_margin="@dimen/activity_horizontal_margin">

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.evanfuhr.pokemondatabase.fragments.PokemonListFragment"
                    android:id="@+id/abilitiedPokemonListFragment"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
