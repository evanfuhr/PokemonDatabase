<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context="com.evanfuhr.pokemondatabase.activities.PokemonDisplayActivity"
    android:id="@+id/pokemon_display_activity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pokemon_details_scroll_view"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Details"
            android:longClickable="false">

            <View
                android:layout_width="fill_parent"
                android:id="@+id/focus_view"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <requestFocus/>

            </View>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.evanfuhr.pokemondatabase.fragments.PokemonDetailsFragment"
                android:id="@+id/pokemonDetailsFragment"
                android:layout_margin="@dimen/activity_horizontal_margin"/>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.evanfuhr.pokemondatabase.fragments.TypeListFragment"
                android:id="@+id/typeListFragment"
                android:layout_margin="@dimen/activity_horizontal_margin"/>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.evanfuhr.pokemondatabase.fragments.TypeMatchUpFragment"
                android:id="@+id/typeMatchUpFragment"
                android:layout_margin="@dimen/activity_horizontal_margin"/>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.evanfuhr.pokemondatabase.fragments.AbilityListFragment"
                android:id="@+id/abilityListFragment"
                android:layout_margin="@dimen/activity_horizontal_margin"/>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.evanfuhr.pokemondatabase.fragments.MoveListFragment"
                android:id="@+id/moveListFragment"
                android:layout_margin="@dimen/activity_horizontal_margin"/>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.evanfuhr.pokemondatabase.fragments.LocationListFragment"
                android:id="@+id/locationListFragment"
                android:layout_margin="@dimen/activity_horizontal_margin"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
