<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evanfuhr.pokemondatabase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            android:hardwareAccelerated="false"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.PokemonDisplayActivity" />
        <activity android:name=".activities.PokemonListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.TypeDisplayActivity" />
        <activity android:name=".activities.TypeListActivity" />
        <activity android:name=".activities.MoveDisplayActivity" />
        <activity android:name=".activities.MoveListActivity" />
        <activity android:name=".activities.NatureListActivity" />
        <activity android:name=".activities.NatureDisplayActivity" />
    </application>

</manifest>