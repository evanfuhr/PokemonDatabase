<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evanfuhr.pokemondatabase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.display.PokemonDisplayActivity" />
        <activity android:name=".activities.list.PokemonListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.display.TypeDisplayActivity" />
        <activity android:name=".activities.list.TypeListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.display.MoveDisplayActivity" />
        <activity android:name=".activities.list.MoveListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.list.NatureListActivity" />
        <activity android:name=".activities.display.NatureDisplayActivity" />
        <activity android:name=".activities.list.AbilityListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.display.AbilityDisplayActivity" />
        <activity android:name=".activities.list.LocationListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.display.LocationDisplayActivity" />
        <activity android:name=".activities.list.EggGroupListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activities.display.EggGroupDisplayActivity" />
    </application>

</manifest>
